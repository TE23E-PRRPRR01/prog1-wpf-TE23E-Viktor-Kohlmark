<Window x:Class="AritmetikApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AritmetikApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" SizeToContent="WidthAndHeight">
<StackPanel>

    <Label>Aritmetiken</Label>
    <Label>Tal 1:</Label>
    <TextBox Name="txtTal1"></TextBox>
    <Label>Operator (+, -, *, /):</Label>
    <TextBox Name="txtOperator"></TextBox>
    <Label>Tal 2:</Label>
    <TextBox Name="txtTal2"></TextBox>
    <Button Click="OnCalculateClick">Beräkna</Button>
    <Label Name="lblResultat"></Label>

</StackPanel>

</Window>
