<Window x:Class="EPOSTAPP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EPOSTAPP"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        SizeToContent="WidthAndHeight" Background="#EEE">
<StackPanel>
<Label FontWeight="Bold" FontSize="30">Epostappen</Label>

<StackPanel Margin="10" Orientation="Horizontal">
    <Label Width="120">Ange epost:</Label>
    <TextBox Width="250" Name="tbxEpost"></TextBox>
</StackPanel>

<StackPanel Margin="10" Orientation="Horizontal">
    <Label Width="120">Ange Meddelande:</Label>
    <TextBox Name="tbxMeddelande" Width="250" Height="250" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"></TextBox>
</StackPanel>
<Button Margin="10" Padding="10" Click="KlickSkicka">Skicka!</Button>
<Label Name="lblStatus" Height="30" Background="#FFF"></Label>
</StackPanel>
</Window>
